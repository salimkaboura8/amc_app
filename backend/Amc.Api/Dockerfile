FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["Amc.Api.csproj", "./"]
RUN dotnet restore "Amc.Api.csproj"
COPY . .
WORKDIR "/src"
RUN dotnet build "Amc.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Amc.Api.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Amc.Api.dll"]
